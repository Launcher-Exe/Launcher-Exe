-- Create a new UI object
local UI = {}

-- Set default values
UI.BackgroundColor = Color3.fromRGB(255, 255, 255)
UI.TextColor = Color3.fromRGB(0, 0, 0)
UI.Font = Enum.Font.SourceSans
UI.FontSize = Enum.FontSize.Size14

-- Define a function to create a new frame
function UI.CreateFrame(Name, Parent, Size, Position)
    local Frame = Instance.new("Frame")
    Frame.Name = Name
    Frame.Size = Size
    Frame.Position = Position or UDim2.new(0, 0, 0, 0)
    Frame.BackgroundColor3 = UI.BackgroundColor
    Frame.BorderSizePixel = 0
    Frame.Parent = Parent
    return Frame
end

-- Define a function to create a new text label
function UI.CreateTextLabel(Name, Parent, Text, Size, Position)
    local TextLabel = Instance.new("TextLabel")
    TextLabel.Name = Name
    TextLabel.Text = Text
    TextLabel.Size = Size or UDim2.new(0, 100, 0, 20)
    TextLabel.Position = Position or UDim2.new(0, 0, 0, 0)
    TextLabel.BackgroundColor3 = UI.BackgroundColor
    TextLabel.TextColor3 = UI.TextColor
    TextLabel.Font = UI.Font
    TextLabel.FontSize = UI.FontSize
    TextLabel.Parent = Parent
    return TextLabel
end

-- Define a function to create a new button
function UI.CreateButton(Name, Parent, Text, Size, Position, Callback)
    local Button = Instance.new("TextButton")
    Button.Name = Name
    Button.Text = Text
    Button.Size = Size or UDim2.new(0, 100, 0, 20)
    Button.Position = Position or UDim2.new(0, 0, 0, 0)
    Button.BackgroundColor3 = UI.BackgroundColor
    Button.TextColor3 = UI.TextColor
    Button.Font = UI.Font
    Button.FontSize = UI.FontSize
    Button.Parent = Parent
    Button.MouseButton1Click:Connect(Callback)
    return Button
end

-- Return the UI object
return UI
